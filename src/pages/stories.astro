---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Timeless Basketball Stories";
const pageDescription = "Explore captivating narratives from the hardwood courts, chronicling legendary players, unforgettable games, and the passion that defines basketball's soul in elegant, modern prose.";

const featuredStories = [
  {
    id: 1,
    title: "The Miracle on Ice of the Court",
    excerpt: "Relive the 1980 U.S. Olympic basketball team's improbable run, a story of resilience amid Cold War tensions. A testament to unity and unyielding spirit.",
    category: "Historic Moment",
    readTime: "5 min read"
  },
  {
    id: 2,
    title: "Jordan's Last Dance",
    excerpt: "Dive deep into Michael Jordan's final championship with the Bulls in 1998, capturing the raw emotion and intensity of his farewell tour.",
    category: "Legendary Players",
    readTime: "7 min read"
  },
  {
    id: 3,
    title: "The Shot That Changed Everything",
    excerpt: "Chronicle the pivotal moment in the 1998 Finals when Scottie Pippen's defensive play sealed the championship, forever altering basketball history.",
    category: "Championship Moments",
    readTime: "6 min read"
  },
  {
    id: 4,
    title: "From Hoop Dreams to Reality",
    excerpt: "Follow the journey of a young star who overcame adversity to become one of the most influential ambassadors of the game.",
    category: "Inspiration",
    readTime: "4 min read"
  }
];

const storyCategories = [
  { name: "Legendary Players", count: 24 },
  { name: "Historic Moments", count: 18 },
  { name: "Championship Stories", count: 32 },
  { name: "Underdog Triumphs", count: 15 },
  { name: "Inspiration", count: 28 }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-primary to-[#1a2232] py-24 md:py-32 overflow-hidden">
    <div class="absolute inset-0 z-0">
      <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(circle_at_50%_50%,rgba(94,234,212,0.1)_1px,transparent_1px)] bg-[length:50px_50px]"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 tracking-tight">
          Timeless Basketball Stories
        </h1>
        
        <p class="text-xl md:text-2xl text-[#a0aec0] mb-8 font-light leading-relaxed">
          Unveiling the Heart of Basketball Through Timeless Stories
        </p>
        
        <div class="flex justify-center items-center space-x-2 pt-4">
          <span class="w-16 h-1 bg-[#5eead4] rounded-full"></span>
          <span class="text-[#5eead4] font-light">Court Chronicles</span>
          <span class="w-16 h-1 bg-[#5eead4] rounded-full"></span>
        </div>
      </div>
    </div>
  </section>

  <!-- Welcome Section -->
  <section class="py-16 md:py-24 bg-gradient-to-b from-[#0c111a] to-[#121826]">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="flex flex-col md:flex-row items-start gap-8">
          <div class="md:w-1/3 flex-shrink-0">
            <div class="rounded-xl overflow-hidden shadow-2xl transform transition duration-500 hover:scale-105">
              <div class="bg-gradient-to-br from-[#5eead4] to-[#0c111a] w-full h-64 flex items-center justify-center">
                <i class="fas fa-basketball-ball text-6xl text-white opacity-20"></i>
              </div>
            </div>
          </div>
          
          <div class="md:w-2/3">
            <h2 class="text-3xl font-bold text-white mb-6">
              Welcome to Court Chronicles: Stories
            </h2>
            
            <p class="text-lg text-[#d1d5db] leading-relaxed mb-6">
              Step into the rhythmic pulse of the game where every dribble echoes history and every shot tells a tale. 
              At Court Chronicles, our Stories page is your gateway to the emotional core of basketball.
            </p>
            
            <p class="text-lg text-[#d1d5db] leading-relaxed mb-6">
              From the grit of underdog triumphs to the grace of all-time greats, these narratives blend archival insights 
              with vivid storytelling to honor the sport's enduring legacy.
            </p>
            
            <div class="flex items-center space-x-4 mt-8">
              <div class="flex items-center">
                <i class="fas fa-star text-[#5eead4] mr-2"></i>
                <span class="text-white font-medium">98% Authenticity</span>
              </div>
              <div class="flex items-center">
                <i class="fas fa-heart text-[#5eead4] mr-2"></i>
                <span class="text-white font-medium">Passionate Writing</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Stories Section -->
  <section class="py-16 md:py-24 bg-[#0c111a]">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Featured Tales</h2>
        <div class="w-24 h-1 bg-[#5eead4] mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {featuredStories.map((story) => (
          <div key={story.id} class="group">
            <div class="bg-gradient-to-br from-[#1a2232] to-[#0c111a] rounded-2xl overflow-hidden shadow-xl transform transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl border border-[#2a3448]">
              <div class="p-6">
                <div class="flex justify-between items-start mb-4">
                  <span class="inline-block px-3 py-1 text-xs font-semibold bg-[#5eead4] text-[#0c111a] rounded-full">
                    {story.category}
                  </span>
                  <span class="text-xs text-[#a0aec0]">{story.readTime}</span>
                </div>
                
                <h3 class="text-xl font-bold text-white mb-3 group-hover:text-[#5eead4] transition-colors duration-300">
                  {story.title}
                </h3>
                
                <p class="text-[#d1d5db] leading-relaxed mb-4">
                  {story.excerpt}
                </p>
                
                <button class="flex items-center text-[#5eead4] font-medium group-hover:text-white transition-colors duration-300">
                  Read Full Story
                  <i class="fas fa-arrow-right ml-2 text-sm"></i>
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="py-16 md:py-24 bg-gradient-to-b from-[#121826] to-[#0c111a]">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Explore by Category</h2>
        <p class="text-[#a0aec0] max-w-2xl mx-auto">
          Dive into stories organized by themes that capture the essence of basketball's greatest moments
        </p>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
        {storyCategories.map((category, index) => (
          <div 
            key={index} 
            class="group relative overflow-hidden rounded-xl bg-gradient-to-br from-[#1a2232] to-[#0c111a] p-6 text-center border border-[#2a3448] transition-all duration-300 hover:border-[#5eead4] hover:shadow-xl"
          >
            <div class="absolute inset-0 bg-gradient-to-br from-[#5eead4] to-transparent opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
            <div class="relative z-10">
              <div class="mx-auto mb-4">
                <div class="bg-[#5eead4] w-16 h-16 rounded-full flex items-center justify-center mx-auto">
                  <i class="fas fa-book-open text-[#0c111a] text-xl"></i>
                </div>
              </div>
              
              <h3 class="text-white font-bold text-lg mb-1">{category.name}</h3>
              <p class="text-[#a0aec0] text-sm">{category.count} stories</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonial Section -->
  <section class="py-16 md:py-24 bg-gradient-to-br from-[#0c111a] to-[#1a2232]">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">From Our Readers</h2>
          <div class="w-24 h-1 bg-[#5eead4] mx-auto"></div>
        </div>
        
        <div class="bg-gradient-to-br from-[#1a2232] to-[#0c111a] rounded-2xl p-8 md:p-12 border border-[#2a3448] shadow-xl">
          <div class="flex items-center mb-6">
            <div class="w-16 h-16 rounded-full bg-gradient-to-br from-[#5eead4] to-[#0c111a] flex items-center justify-center mr-4">
              <i class="fas fa-user text-white text-xl"></i>
            </div>
            <div>
              <h4 class="text-white font-bold text-lg">Sarah Mitchell</h4>
              <p class="text-[#5eead4]">Basketball Enthusiast</p>
            </div>
          </div>
          
          <blockquote class="text-lg text-[#d1d5db] italic leading-relaxed">
            "Court Chronicles has transformed how I appreciate basketball. Each story feels like a living memory, 
            bringing the sport's greatest moments to life in ways that make my heart race all over again."
          </blockquote>
          
          <div class="mt-8 flex justify-center">
            <div class="flex space-x-1">
              {[...Array(5)].map((_, i) => (
                <i key={i} class="fas fa-star text-yellow-400"></i>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-br from-[#0c111a] to-primary">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
          Ready for Your Next Basketball Adventure?
        </h2>
        <p class="text-lg text-[#a0aec0] mb-10 leading-relaxed">
          Join thousands of readers who discover the deeper meaning behind every play, every game, and every legend.
        </p>
        
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="px-8 py-4 bg-[#5eead4] text-[#0c111a] font-bold rounded-full hover:bg-[#3fc5b1] transition-colors duration-300 shadow-lg transform hover:scale-105 transition-transform">
            Explore Stories
          </button>
          <button class="px-8 py-4 bg-transparent border-2 border-[#5eead4] text-white font-bold rounded-full hover:bg-[#5eead4] hover:text-[#0c111a] transition-colors duration-300">
            Subscribe Newsletter
          </button>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');
  
  .hero-pattern {
    background-image: 
      radial-gradient(circle at 10% 20%, rgba(94, 234, 212, 0.05) 0%, transparent 20%),
      radial-gradient(circle at 90% 80%, rgba(94, 234, 212, 0.05) 0%, transparent 20%);
  }
  
  .story-card:hover {
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
  }
  
  .fade-in {
    animation: fadeIn 0.8s ease-out forwards;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>