---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Welcome to Court Chronicles";
const pageDescription = "Dive into the captivating world of basketball through timeless stories that reveal the passion, triumphs, and legends of the court.";

const featuredStories = [
  {
    id: 1,
    title: "The Rise of the Dream Team",
    excerpt: "Exploring how basketball became a global phenomenon through the eyes of legendary players.",
    category: "Legends",
    date: "May 15, 2023"
  },
  {
    id: 2,
    title: "From High School Courts to NBA Glory",
    excerpt: "The inspiring journey of overlooked talent finding their place on basketball's biggest stage.",
    category: "Culture",
    date: "June 2, 2023"
  },
  {
    id: 3,
    title: "Basketball's Evolution Across Continents",
    excerpt: "How the sport transformed from American pastime to worldwide obsession.",
    category: "Culture",
    date: "April 28, 2023"
  }
];

const storyCategories = [
  { name: "Legends", count: 24 },
  { name: "Culture", count: 18 },
  { name: "Inspiration", count: 32 },
  { name: "History", count: 15 }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-[#0c111a] to-[#1a253a] pt-20 pb-32 overflow-hidden">
    <div class="absolute inset-0 z-0">
      <div class="absolute top-0 left-0 w-full h-full opacity-10">
        <div class="absolute top-1/4 left-1/4 w-64 h-64 rounded-full bg-[#5eead4] blur-3xl"></div>
        <div class="absolute bottom-1/3 right-1/3 w-72 h-72 rounded-full bg-[#5eead4] blur-3xl"></div>
      </div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-block px-4 py-1 mb-4 bg-[#5eead4] bg-opacity-20 rounded-full border border-[#5eead4] border-opacity-30">
          <span class="text-[#5eead4] font-medium">ELEGANT STORYTELLING</span>
        </div>
        
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight">
          Welcome to <span class="text-[#5eead4]">Court Chronicles</span>
        </h1>
        
        <p class="text-xl md:text-2xl text-gray-300 mb-10 max-w-3xl mx-auto leading-relaxed">
          Unveiling the Heart of Basketball Through Timeless Stories
        </p>
        
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="px-8 py-4 bg-[#5eead4] text-[#0c111a] font-semibold rounded-lg hover:bg-[#4db8a9] transition-all duration-300 transform hover:-translate-y-1 shadow-lg">
            Explore Stories
          </button>
          <button class="px-8 py-4 bg-transparent border-2 border-[#5eead4] text-[#5eead4] font-semibold rounded-lg hover:bg-[#5eead4] hover:text-[#0c111a] transition-all duration-300">
            Subscribe
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Intro Section -->
  <section class="py-20 bg-gradient-to-b from-[#0c111a] to-[#1a253a]">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
          Why <span class="text-[#5eead4]">Court Chronicles</span>?
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12">
          <div class="bg-[#1a253a] bg-opacity-50 p-8 rounded-xl border border-[#5eead4] border-opacity-20 backdrop-blur-sm hover:border-opacity-40 transition-all duration-300">
            <div class="w-16 h-16 bg-[#5eead4] bg-opacity-20 rounded-full flex items-center justify-center mb-6 mx-auto">
              <i class="fas fa-crown text-[#5eead4] text-2xl"></i>
            </div>
            <h3 class="text-xl font-bold text-white mb-4">Celebrate Legends</h3>
            <p class="text-gray-300 leading-relaxed">
              From Michael Jordan's iconic moments to the unsung heroes who paved the way.
            </p>
          </div>
          
          <div class="bg-[#1a253a] bg-opacity-50 p-8 rounded-xl border border-[#5eead4] border-opacity-20 backdrop-blur-sm hover:border-opacity-40 transition-all duration-300">
            <div class="w-16 h-16 bg-[#5eead4] bg-opacity-20 rounded-full flex items-center justify-center mb-6 mx-auto">
              <i class="fas fa-globe-americas text-[#5eead4] text-2xl"></i>
            </div>
            <h3 class="text-xl font-bold text-white mb-4">Explore the Culture</h3>
            <p class="text-gray-300 leading-relaxed">
              Dive into the global impact, fan traditions, and the evolution of the game.
            </p>
          </div>
          
          <div class="bg-[#1a253a] bg-opacity-50 p-8 rounded-xl border border-[#5eead4] border-opacity-20 backdrop-blur-sm hover:border-opacity-40 transition-all duration-300">
            <div class="w-16 h-16 bg-[#5eead4] bg-opacity-20 rounded-full flex items-center justify-center mb-6 mx-auto">
              <i class="fas fa-graduation-cap text-[#5eead4] text-2xl"></i>
            </div>
            <h3 class="text-xl font-bold text-white mb-4">Inspire the Next</h3>
            <p class="text-gray-300 leading-relaxed">
              Share tales of resilience, teamwork, and breakthrough moments.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Stories -->
  <section class="py-20 bg-[#0c111a]">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Featured Stories</h2>
        <div class="w-24 h-1 bg-[#5eead4] mx-auto rounded-full"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredStories.map((story) => (
          <article class="group bg-gradient-to-br from-[#1a253a] to-[#0c111a] rounded-xl overflow-hidden border border-[#5eead4] border-opacity-10 hover:border-opacity-30 transition-all duration-300 transform hover:-translate-y-2">
            <div class="p-6">
              <div class="flex justify-between items-start mb-4">
                <span class="px-3 py-1 bg-[#5eead4] bg-opacity-20 text-[#5eead4] text-xs font-semibold rounded-full">
                  {story.category}
                </span>
                <span class="text-gray-400 text-sm">{story.date}</span>
              </div>
              
              <h3 class="text-xl font-bold text-white mb-3 group-hover:text-[#5eead4] transition-colors duration-300">
                {story.title}
              </h3>
              
              <p class="text-gray-300 mb-6 leading-relaxed">
                {story.excerpt}
              </p>
              
              <button class="text-[#5eead4] font-medium flex items-center group-hover:text-[#4db8a9] transition-colors duration-300">
                Read More
                <i class="fas fa-arrow-right ml-2 text-sm"></i>
              </button>
            </div>
          </article>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <button class="px-8 py-3 border-2 border-[#5eead4] text-[#5eead4] font-medium rounded-lg hover:bg-[#5eead4] hover:text-[#0c111a] transition-all duration-300">
          View All Stories
        </button>
      </div>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="py-20 bg-gradient-to-b from-[#1a253a] to-[#0c111a]">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Explore by Category</h2>
        <p class="text-gray-400 max-w-2xl mx-auto">
          Discover stories across all aspects of basketball culture and history
        </p>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto">
        {storyCategories.map((category) => (
          <div class="bg-[#0c111a] bg-opacity-50 p-6 rounded-xl border border-[#5eead4] border-opacity-10 hover:border-opacity-30 transition-all duration-300 group cursor-pointer">
            <div class="text-center">
              <div class="w-16 h-16 bg-[#5eead4] bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-[#5eead4] group-hover:bg-opacity-30 transition-colors duration-300">
                <i class="fas fa-book text-[#5eead4] text-xl"></i>
              </div>
              <h3 class="text-lg font-bold text-white mb-2">{category.name}</h3>
              <p class="text-gray-400 text-sm">{category.count} articles</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-[#0c111a] to-[#1a253a]">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
          Join Our Basketball Community
        </h2>
        <p class="text-xl text-gray-300 mb-10">
          Get exclusive access to new stories and behind-the-scenes content
        </p>
        
        <div class="max-w-md mx-auto flex flex-col sm:flex-row gap-4">
          <input 
            type="email" 
            placeholder="Your email address" 
            class="flex-grow px-6 py-4 bg-[#1a253a] border border-[#5eead4] border-opacity-20 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-[#5eead4] focus:ring-2 focus:ring-[#5eead4] focus:ring-opacity-30"
          />
          <button class="px-8 py-4 bg-[#5eead4] text-[#0c111a] font-semibold rounded-lg hover:bg-[#4db8a9] transition-all duration-300 whitespace-nowrap">
            Subscribe Now
          </button>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css');
  
  .hero-pattern {
    background-image: radial-gradient(circle at 20% 80%, rgba(94, 234, 212, 0.1) 0%, transparent 20%),
                      radial-gradient(circle at 80% 20%, rgba(94, 234, 212, 0.1) 0%, transparent 20%);
  }
  
  .fade-in {
    animation: fadeIn 0.8s ease-out forwards;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .pulse {
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0% { box-shadow: 0 0 0 0 rgba(94, 234, 212, 0.4); }
    70% { box-shadow: 0 0 0 10px rgba(94, 234, 212, 0); }
    100% { box-shadow: 0 0 0 0 rgba(94, 234, 212, 0); }
  }
</style>