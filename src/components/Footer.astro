---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { icon: 'fab fa-twitter', url: '#' },
  { icon: 'fab fa-instagram', url: '#' },
  { icon: 'fab fa-linkedin', url: '#' },
  { icon: 'fab fa-facebook', url: '#' }
];
---

<footer class="bg-[#0c111a] text-white py-12">
  <div class="container mx-auto px-4">
    <div class="text-center mb-8">
      <h2 class="text-2xl font-serif mb-2">Court Chronicles</h2>
      <p class="text-[#5eead4]">Elegant storytelling about legal affairs</p>
    </div>
    
    <div class="flex justify-center gap-6 mb-8">
      {socialLinks.map((link) => (
        <a 
          href={link.url} 
          class="text-white hover:text-[#5eead4] transition-colors duration-300"
          aria-label={`Follow us on ${link.icon.split('-')[2]}`}
        >
          <i class={link.icon}></i>
        </a>
      ))}
    </div>
    
    <div class="border-t border-[#5eead4] pt-8 text-center">
      <p class="text-sm opacity-75">&copy; {currentYear} Court Chronicles. All rights reserved.</p>
    </div>
  </div>
</footer>